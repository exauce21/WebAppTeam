@model IEnumerable<TPWebGroupe.Models.Produit>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
    @Html.ActionLink("Imprimer", "ImprimerListeProduit")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Categorie.libelleCategorie)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Designation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PU)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QteStock)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QteMin)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DatePeremption)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Categorie.libelleCategorie)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Designation)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PU)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.QteStock)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.QteMin)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DatePeremption)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.idProduit }) |
            @Html.ActionLink("Details", "Details", new { id=item.idProduit }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.idProduit })
        </td>
    </tr>
}

</table>
